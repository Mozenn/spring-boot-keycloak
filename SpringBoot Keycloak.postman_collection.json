  "item": [
    {
      "name": "GetToken",
      "event": [
        {t
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "    var res = JSON.parse(responseBody);\r",
              "    pm.collectionVariables.set(\"keycloakToken\", res.access_token);\r",
              "    pm.collectionVariables.set(\"keycloakRefreshToken\", res.refresh_token);\r",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "POST",
        "header": [],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "username",
              "value": "{{username}}",
              "type": "text"
            },
            {
              "key": "password",
              "value": "{{password}}",
              "type": "text"
            },
            {
              "key": "client_id",
              "value": "{{client_id}}",
              "type": "text"
            },
            {
              "key": "grant_type",
              "value": "password",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{keycloakServer}}/auth/realms/{{realm}}/protocol/openid-connect/token",
          "host": [
            "{{keycloakServer}}"
          ],
          "path": [
            "auth",
            "realms",
            "{{realm}}",
            "protocol",
            "openid-connect",
            "token"
          ]
        }
      },
      "response": []
    },
    {
      "name": "GetPlant",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{applicationServer}}/plant/1",
          "host": [
            "{{applicationServer}}"
          ],
          "path": [
            "plant",
            "1"
          ]
        }
      },
      "response": []
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{keycloakToken}}",
        "type": "string"
      }
    ]
